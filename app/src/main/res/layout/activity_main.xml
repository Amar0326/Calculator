<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/solution_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="vertical"
        android:layout_above="@+id/result_tv"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginEnd="@dimen/_10sdp"
        android:layout_marginBottom="@dimen/_10sdp"

        android:textAlignment="textEnd"
        android:textColor="@color/white"
        android:textSize="@dimen/_32sdp" />

    <TextView
        android:id="@+id/result_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/button_layout"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginEnd="@dimen/_10sdp"
        android:layout_marginBottom="@dimen/_10sdp"

        android:textAlignment="textEnd"
        android:textColor="@color/white"
        android:textSize="@dimen/_55sdp" />

 <LinearLayout
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:orientation="vertical"
     android:layout_alignParentBottom="true"
     android:background="#090B09"
     android:id="@+id/button_layout">

     <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:gravity="center"
         android:orientation="horizontal">

         <com.google.android.material.button.MaterialButton
             android:layout_width="@dimen/_50sdp"
             android:layout_height="@dimen/_50sdp"
             app:cornerRadius="@dimen/_26sdp"
             style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
             android:textSize="@dimen/_26ssp"
             android:textColor="@color/white"
             android:id="@+id/button_C"
             android:text="C"
             android:backgroundTint="#388E3C"
             android:layout_margin="@dimen/_12sdp"/>
         <com.google.android.material.button.MaterialButton
             android:layout_width="@dimen/_50sdp"
             android:layout_height="@dimen/_50sdp"
             app:cornerRadius="@dimen/_26sdp"
             style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
             android:textSize="@dimen/_26ssp"
             android:textColor="@color/white"
             android:id="@+id/button_openbracket"
             android:text="("
             android:backgroundTint="#8bc34a"
             android:layout_margin="@dimen/_12sdp"/>
         <com.google.android.material.button.MaterialButton
             android:layout_width="@dimen/_50sdp"
             android:layout_height="@dimen/_50sdp"
             app:cornerRadius="@dimen/_26sdp"
             style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
             android:textSize="@dimen/_26ssp"
             android:textColor="@color/white"
             android:id="@+id/button_closebracket"
             android:text=")"
             android:backgroundTint="#8bc34a"
             android:layout_margin="@dimen/_12sdp"/>
         <com.google.android.material.button.MaterialButton
             android:layout_width="@dimen/_50sdp"
             android:layout_height="@dimen/_50sdp"
             app:cornerRadius="@dimen/_26sdp"
             style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
             android:textSize="@dimen/_26ssp"
             android:textColor="@color/white"
             android:id="@+id/button_divide"
             android:text="/"
             android:backgroundTint="#388E3C"
             android:layout_margin="@dimen/_12sdp"/>

     </LinearLayout>
     <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:gravity="center"
         android:orientation="horizontal">

         <com.google.android.material.button.MaterialButton
             android:layout_width="@dimen/_50sdp"
             android:layout_height="@dimen/_50sdp"
             app:cornerRadius="@dimen/_26sdp"
             style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
             android:textSize="@dimen/_26ssp"
             android:textColor="@color/white"
             android:id="@+id/button_7"
             android:text="7"
             android:layout_margin="@dimen/_12sdp"/>
         <com.google.android.material.button.MaterialButton
             android:layout_width="@dimen/_50sdp"
             android:layout_height="@dimen/_50sdp"
             app:cornerRadius="@dimen/_26sdp"
             style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
             android:textSize="@dimen/_26ssp"
             android:textColor="@color/white"
             android:id="@+id/button_8"
             android:text="8"
             android:layout_margin="@dimen/_12sdp"/>
         <com.google.android.material.button.MaterialButton
             android:layout_width="@dimen/_50sdp"
             android:layout_height="@dimen/_50sdp"
             app:cornerRadius="@dimen/_26sdp"
             style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
             android:textSize="@dimen/_26ssp"
             android:textColor="@color/white"
             android:id="@+id/button_9"
             android:text="9"
             android:layout_margin="@dimen/_12sdp"/>
         <com.google.android.material.button.MaterialButton
             android:layout_width="@dimen/_50sdp"
             android:layout_height="@dimen/_50sdp"
             app:cornerRadius="@dimen/_26sdp"
             style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
             android:textSize="@dimen/_26ssp"
             android:textColor="@color/white"
             android:id="@+id/button_multiply"
             android:text="*"
             android:backgroundTint="#388E3C"
             android:layout_margin="@dimen/_12sdp"/>

     </LinearLayout>
     <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:gravity="center"
         android:orientation="horizontal">

         <com.google.android.material.button.MaterialButton
             android:layout_width="@dimen/_50sdp"
             android:layout_height="@dimen/_50sdp"
             app:cornerRadius="@dimen/_26sdp"
             style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
             android:textSize="@dimen/_26ssp"
             android:textColor="@color/white"
             android:id="@+id/button_4"
             android:text="4"
             android:layout_margin="@dimen/_12sdp"/>
         <com.google.android.material.button.MaterialButton
             android:layout_width="@dimen/_50sdp"
             android:layout_height="@dimen/_50sdp"
             app:cornerRadius="@dimen/_26sdp"
             style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
             android:textSize="@dimen/_26ssp"
             android:textColor="@color/white"
             android:id="@+id/button_5"
             android:text="5"
             android:layout_margin="@dimen/_12sdp"/>
         <com.google.android.material.button.MaterialButton
             android:layout_width="@dimen/_50sdp"
             android:layout_height="@dimen/_50sdp"
             app:cornerRadius="@dimen/_26sdp"
             style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
             android:textSize="@dimen/_26ssp"
             android:textColor="@color/white"
             android:id="@+id/button_6"
             android:text="6"
             android:layout_margin="@dimen/_12sdp"/>
         <com.google.android.material.button.MaterialButton
             android:layout_width="@dimen/_50sdp"
             android:layout_height="@dimen/_50sdp"
             app:cornerRadius="@dimen/_26sdp"
             style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
             android:textSize="@dimen/_26ssp"
             android:textColor="@color/white"
             android:id="@+id/button_Addition"
             android:text="+"
             android:backgroundTint="#388E3C"
             android:layout_margin="@dimen/_12sdp"/>

     </LinearLayout>
     <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:gravity="center"
         android:orientation="horizontal">

         <com.google.android.material.button.MaterialButton
             android:layout_width="@dimen/_50sdp"
             android:layout_height="@dimen/_50sdp"
             app:cornerRadius="@dimen/_26sdp"
             style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
             android:textSize="@dimen/_26ssp"
             android:textColor="@color/white"
             android:id="@+id/button_1"
             android:text="1"
             android:layout_margin="@dimen/_12sdp"/>
         <com.google.android.material.button.MaterialButton
             android:layout_width="@dimen/_50sdp"
             android:layout_height="@dimen/_50sdp"
             app:cornerRadius="@dimen/_26sdp"
             style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
             android:textSize="@dimen/_26ssp"
             android:textColor="@color/white"
             android:id="@+id/button_2"
             android:text="2"
             android:layout_margin="@dimen/_12sdp"/>
         <com.google.android.material.button.MaterialButton
             android:layout_width="@dimen/_50sdp"
             android:layout_height="@dimen/_50sdp"
             app:cornerRadius="@dimen/_26sdp"
             style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
             android:textSize="@dimen/_26ssp"
             android:textColor="@color/white"
             android:id="@+id/button_3"
             android:text="3"
             android:layout_margin="@dimen/_12sdp"/>
         <com.google.android.material.button.MaterialButton
             android:layout_width="@dimen/_50sdp"
             android:layout_height="@dimen/_50sdp"
             app:cornerRadius="@dimen/_26sdp"
             style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
             android:textSize="@dimen/_26ssp"
             android:textColor="@color/white"
             android:id="@+id/button_minus"
             android:text="-"
             android:backgroundTint="#388E3C"
             android:layout_margin="@dimen/_12sdp"/>

     </LinearLayout>

     <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:gravity="center"
         android:orientation="horizontal">

         <com.google.android.material.button.MaterialButton
             android:id="@+id/button_ac"
             style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
             android:layout_width="@dimen/_50sdp"
             android:layout_height="@dimen/_50sdp"
             android:layout_margin="@dimen/_12sdp"
             android:backgroundTint="#388E3C"
             android:text="AC"
             android:textColor="@color/white"
             android:textSize="@dimen/_10ssp"
             app:cornerRadius="@dimen/_26sdp" />

         <com.google.android.material.button.MaterialButton
             android:id="@+id/button_0"
             style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
             android:layout_width="@dimen/_50sdp"
             android:layout_height="@dimen/_50sdp"
             android:layout_margin="@dimen/_12sdp"
             android:text="0"
             android:textColor="@color/white"
             android:textSize="@dimen/_26ssp"
             app:cornerRadius="@dimen/_26sdp" />

         <com.google.android.material.button.MaterialButton
             android:id="@+id/button_dot"
             style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
             android:layout_width="@dimen/_50sdp"
             android:layout_height="@dimen/_50sdp"
             android:layout_margin="@dimen/_12sdp"
             android:baselineAligned="false"
             android:text="."
             android:textColor="@color/white"
             android:textSize="@dimen/_26ssp"
             app:cornerRadius="@dimen/_26sdp" />

         <com.google.android.material.button.MaterialButton
             android:id="@+id/button_Equal"
             style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
             android:layout_width="@dimen/_50sdp"
             android:layout_height="@dimen/_50sdp"
             android:layout_margin="@dimen/_12sdp"
             android:backgroundTint="#388E3C"
             android:text="="
             android:textColor="@color/white"
             android:textSize="@dimen/_26ssp"
             app:cornerRadius="@dimen/_26sdp" />

     </LinearLayout>

 </LinearLayout>



</RelativeLayout>